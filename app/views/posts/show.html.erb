<h1><%= @post.title %></h1>

<p><%= @post.body %></p>
<p>Category : <%= link_to @post.category.name, category_path(@post.category) %></p>
<% if session[:author_id] %>
  <p><%= link_to "Edit", edit_post_path(@post) %>  <%= link_to "delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %></p>
<% end %>

<h3>Comments</h3>
<% if @post.comments %>
  <%= render partial: 'posts/comment', collection: @post.comments %>
<% end %>
<br>
<% if session[:user_id] || session[:author_id] %>
  <h3>Post a Comment</h3>
  <%= render partial: 'comments/form' %>
<% end %>
<%= link_to "Back", posts_path %>