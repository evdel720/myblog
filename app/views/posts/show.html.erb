<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<% if @post.category %>
  <p>Category : <%= link_to @post.category.name, category_path(@post.category) %></p>
<% end %>

<%= link_to "Back", posts_path %><br>
<%= link_to "Edit", edit_post_path(@post) %><br>
<%= link_to "delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>