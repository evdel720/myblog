<div>
  <h4>Commented by <i><%= comment.commentor %></i>, <%= date_format(comment.updated_at) %></h4>
  <p><%= comment.body %></p>
    <% if session[:user_id] && comment.commentor == User.find(session[:user_id]).name %>
      <%= link_to "edit", edit_post_comment_path(comment.post_id, comment) %>  <%= link_to "del", post_comment_path(comment.post_id, comment), method: :delete, data: {confirm: "Are you sure?"}%>
    <% end %>
    <% if session[:author_id] %>
      <% if comment.commentor == Author.find(session[:author_id]).author %>
        <%= link_to "edit", edit_post_comment_path(comment.post_id, comment) %>
      <% end %>
      <%= link_to "del", post_comment_path(comment.post_id, comment), method: :delete, data: {confirm: "Are you sure?"}%>
    <% end %>
